@using Booking_Backend.Repository.Users.Request;
@model LoginRequest;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="%PUBLIC_URL%/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <!-- fontawesome6.5.1 -->
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Gonow.net - Đăng nhập</title>
</head>

<body>
    <div class='guest-header'>
        <header>
            <nav class='block-header'>
                <div class='block-content-header'>
                    <a href='https://chat.openai.com/c/a209f5bd-f0da-465f-8e2a-d36a7970126d' class='link-header'>
                        Gonow.net
                    </a>
                </div>
                <div class='block-language-header'>
                    <div class='symbol-language-block'>
                        <img class="icon-nation" src='~/image/login/vietnam-26834_640.png' alt='' />
                    </div>
                    <div class='text-language-block'>
                        <select>
                            <option>Việt Nam</option>
                            <option>English</option>
                        </select>
                    </div>
                </div>
            </nav>
        </header>
    </div>
    <div class='access-container'>
        <div class='access-panel-container'>
            <div class='access-panel'>
                <div class='main-panel'>
                    <div class='title-login'>
                        <h3>Đăng nhập với Gonow.net</h3>
                    </div>
                    <div class='input-wrapper'>
                    <form asp-action="login" asp-controller="user" method="post">
                            <div class='input-wrapper-email'>
                                <label class='label-wrapper'>
                                    Địa chỉ email
                                </label>
                                <div>
                                    <input asp-for="Email" class='input-email input-data'
                                           type='email' placeholder='Nhập email tại đây' />
                                </div>
                            </div>
                            <div class='input-wrapper-password'>
                                <label class='label-wrapper'>
                                    Mật khẩu
                                </label>
                                <div class='input-data-parent'>
                                    <input asp-for="Password" id="passwordFieldId" class='input-password input-data'
                                           type="password" placeholder='Nhập mật khẩu tại đây' />
                                    <i id="togglePasswordId" class="eye-true fa-regular fa-eye-slash"></i>
                                </div>
                            </div>
                            <div class='another-access'>
                                <div class='forget-password'>
                                    <input type='checkbox' asp-for="RemmemberMe" />
                                    Ghi nhớ tài khoản
                                </div>
                                <div class='signin-account'>
                                    <a href='agu.edu.vn'>Lấy lại mật khẩu!</a>
                                </div>
                            </div>
                            <div class='input-submit-wrapper'>
                                <button type="submit" class='input-submit-login btn btn-primary form-control'>Tiếp tục</button>
                            </div>
                    </form>
                        <div class='access-panel__social'>
                            <div class='line-social'>
                                <hr></hr>
                                <span class='line-social-text'>hoặc sử dụng các chọn lựa khác</span>
                            </div>
                            <div class='social-group'>
                                <div class='social-item'>
                                    <div class='social-item_facebook'>
                                        <button class="btn-facebook">
                                            <i class="p-r-7 f-s fa-brands fa-facebook"></i>
                                            Facebook
                                        </button>
                                    </div>
                                    <div class='social-item_google'>
                                        <button class="btn-google d-flex">
                                            <img src="~/images/login/Google__G__logo.png" alt="Google Logo" class="google-icon" />
                                            <span class="p-l-7">Google</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="signin-link">
                            <a href="">Bạn vẫn chưa có tài khoản nữa sao?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/Login.js"></script>
</body>

</html>