@model Booking_Backend.Repository.Service.ViewModel.ServiceHotelViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center ">
        <div class="col-md-8" style="border: thin solid #ccc; border-radius: 7px; box-shadow: 5px 5px 5px 5px #ccc">
            <h3 class="text-center p-3" style="margin:0;">Cập nhật thông tin dịch vụ</h3>
            <form asp-action="update" asp-controller="servicehotel" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" class="form-control" />
                <div class="form-group">
                    <input placeholder="Tên dịch vụ" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <textarea style="height: 300px" placeholder="Nội dung mô tả..." asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group p-3">
                    <a style="text-decoration: none" href="/servicehotel">
                        <div class="btn btn-outline-primary text-primary">Hủy</div>
                    </a>
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

