@using Booking_Frontend.WebApp.Models.Owner;
@model NotifyBookingViewModel

@{
    ViewData["Title"] = "StateRoomPrice";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}
<div id="layoutSidenav_content">
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Mã phòng</th>
                    <th>Trạng thái</th>
                    <th>Sức chứa</th>
                    <th>Đơn giá</th>
                    <th>Kiểu phòng</th>
                    <th class="col-md-3">Kiểu giường</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.RoomOwnerViewModel.ResultOject.Count > 0)
                {
                    @foreach (var room in Model.RoomOwnerViewModel.ResultOject)
                    {
                        <tr>
                            <td>@room.Id</td>
                            <td>@room.RoomCode</td>
                            <td>@room.Status</td>
                            <td>@room.Maximum</td>
                            <td>@room.PriceOverNight.ToString("N0") VND</td>
                            <td>@room.RoomType.RoomTypeTranslations.FirstOrDefault().Name</td>
                            <td>@room.Bed.BedTranslations.FirstOrDefault().Name</td>
                            <td><a href="/stateroom-price/get-room/@room.Id"><div class="btn btn-warning"><i class="bi bi-pencil-square" style="color: white"></i></div></a></td>
                            <td><a href=""><div class="btn btn-danger"><i class="bi bi-x-square" style="color: white"></i></div></a></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Mã phòng</th>
                    <th>Trạng thái</th>
                    <th>Sức chứa</th>
                    <th>Đơn giá</th>
                    <th>Kiểu phòng</th>
                    <th class="col-md-3">Kiểu giường</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>

    </div>
</div>

